<% if params[:action] == "show" %>
Record your word<br />
<% form_for("recording", :url => recordings_makecall_path ) do |f| -%> 
	<%= f.hidden_field :word_id %>
	<div class="field">
	<%= f.label :short_text, "Include a short message" %><br />
	<%= f.text_area :short_text, :size => "20" %>
	</div>
	<div class="actions">
	<%= f.submit "Call Me Now!", :id => "user_submit" %>	
	</div>
<% end -%>
<% else %>
Login with:<br />
<a class="addthis_button_facebook"><img src="/images/facebook.png" width="39" height="39" alt="Share to Facebook" /></a>
<a class="addthis_button_twitter"><img src="/images/twitter.png" 	width="39" height="39" alt="Share to Twitter" /></a>
<a class="addthis_button_facebook"><img src="/images/linkedin.png" width="39" height="39" alt="Share to linkedin" /></a>    
<% end -%>