                  <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>good word</title>

<%= javascript_include_tag :defaults %>
<%= javascript_include_tag '/player/build/mediaelement.js' %>
<%= javascript_include_tag '/player/build/mediaelementplayer.js' %>


<%= stylesheet_link_tag '../player/build/mediaelementplayer.css' %> 
<%= stylesheet_link_tag 'reset' %>
<%= stylesheet_link_tag 'text' %>
<%= stylesheet_link_tag '960' %>
<%= stylesheet_link_tag 'custom' %>

<%= csrf_meta_tag %> 


</head>


<body>
	<div class="wrapper">                  
		
		<div class="container_16"> 
			<div id="header" class="container_16">
			 	<div id="logo" class="grid_3">
				A good word
				</div>             
				<div id="greeting" class="grid_9">
						 <% if user_signed_in? %>
							<p>
							 <%= link_to "Welcome " + current_user.name + ".", current_user %> 
							See your favorites(12), posts, <%= link_to "words", words_path %> or <%= link_to 'sign out', destroy_user_session_path %>                                                </p>
							<% else %>   
							<p>
							<%= link_to "Sign in", new_user_session_path %>
							<%= link_to "Sign up", new_user_registration_path %> 
							</p>
							<% end -%>

				</div>
				<div id="share" class="grid_4">
					<div class="addthis_toolbox">   
				    <div class="custom_images">
				      <a class="addthis_button_facebook"><img src="/images/facebook.png" width="39" height="39" alt="Share to Facebook" /></a>
				      <a class="addthis_button_twitter"><img src="/images/twitter.png" 	width="39" height="39" alt="Share to Twitter" /></a>
				      <a class="addthis_button_reddit"><img src="/images/reddit.png" 		width="39" height="39" alt="Share to Reddit" /></a>
				      <a class="addthis_button_more"><img src="/images/addthis_64.png" 	width="39" height="39" alt="More..." /></a>
				     </div>
				  </div>   
				</div>
			</div>
		</div>
	 
	  <div class="clear"></div>
	
		<div id="main">
			<div class="container_16">
				<div class="grid_16">

						<div id="word" class="grid_6 prefix_1">
							<div id="wordcontainer">
								<p id="theword">
									<%= raw @title %>
								</p> 	
									<br /><br /><br />
							</div>
						</div>  
						<div id="word" class="grid_6 prefix_1">
							<div id="wordcontainer">
								<p id="theword2">
									<%= render "right_column" %>
								</p>
							</div>
						</div>

				</div>
			</div>
		</div>

		<div class="clear"></div>  

		<div class="container_16">
			<div id="contentwrapper" class="grid_16"> 
				<div class="grid_4">Home > I like turtles</div>
				<div id="content" class="grid_16">
				<%= yield %>                          


					</div>	    
				</div>  
				<%= render 'shared/footer' %>

			</div>		
	</div>	
</body>
</html>
 
<script>
$('audio').mediaelementplayer({audioWidth: 175, controls: {play: true, progressBar: true, duration: false, volume:true}});
</script>
